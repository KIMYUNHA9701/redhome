<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssangyong.redhome.dao.MemberMapper">

    <select id="idCheckMember" parameterType="String" resultType="com.ssangyong.redhome.bean.Member">
        SELECT * FROM MEMBER WHERE MEMBER_ID = #{VALUE}
    </select>

    <insert id="insertMember" parameterType="com.ssangyong.redhome.bean.Member">
        INSERT INTO MEMBER(MEMBER_ID, MEMBER_PWD, MEMBER_NAME, MEMBER_TEL, MEMBER_EMAIL, MEMBER_REG, MEMBER_ADDR, MEMBER_BIRTH, MEMBER_POINT, LEVEL_NUM)
        VALUES(#{member_id},#{member_pwd},#{member_name},#{member_tel},#{member_email},SYSDATE,#{member_addr},#{member_birth},0,0)
    </insert>

    <select id="selectAllMember" resultType="com.ssangyong.redhome.bean.Member">
        SELECT * FROM MEMBER
    </select>

    <update id="updateMember" parameterType="java.util.Map">
        UPDATE MEMBER
        SET
            MEMBER_EMAIL = #{email},
            MEMBER_NAME = #{name},
            MEMBER_ADDR = #{address},
            MEMBER_TEL = #{tel},
            MEMBER_BIRTH = #{birth}
        WHERE MEMBER_ID = #{id}
    </update>

    <delete id="deleteMember" parameterType="String">
        DELETE FROM MEMBER WHERE MEMBER_ID = #{VALUE}
    </delete>

    <select id="searchMember" parameterType="java.util.Map" resultType="com.ssangyong.redhome.bean.Member">
        SELECT * FROM MEMBER

        <if test="query!=null">
            <where>${query} LIKE '%'||#{data}||'%' </where>
        </if>
    </select>
</mapper>

